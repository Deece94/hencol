---
import InfoCard from "../components/InfoCard.astro";
import Seperator from "../components/Seperator.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hencol Business Advisory">
    <style>
        .banner1 {
            background-image: url("/img/banner1.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
        }

        @media only screen and (max-device-width: 1280px) {
            .banner1 {
                background-attachment: scroll;
            }
        }
    </style>
    <main>
        <section class="banner1 bg-fixed md:bg-scroll h-[400px] md:h-[600px]">
            <div class="flex items-center justify-center h-full">
                <h2 class="text-6xl font-bold text-white text-shadow text-center">
                    Your <span class="text-light-red">business</span> is our priority
                </h2>
            </div>
        </section>

        <section class="bg-white text-lg text-gray-800 py-8">
            <div class="max-w-7xl mx-auto">
                <section class="w-full flex flex-wrap mt-10">
                    <div class="w-full md:w-2/3 px-2 text-lg">
                        <h1 class="text-4xl section-heading after:bg-slate-500 font-bold">
                            Welcome to Hencol Business Advisory
                        </h1>
                        <div class="fade-in">
                            <p class="py-3">
                                At Hencol Business Advisory, we work closely with our clients to help them reach their
                                financial goals. We are a boutique firm who focus on providing financial solutions for
                                small to medium business clients.
                            </p>
                            <p class="py-3">
                                We are technology focussed and provide business support through XERO and Reckon
                                Accounting software.
                            </p>
                            <p class="py-3">
                                We are passionate about our clients and strive to build long term relationships through
                                superior service.
                            </p>
                        </div>
                    </div>
                    <div class="w-full md:w-1/3 px-2 my-auto">
                        <img class="w-full rounded drop-shadow" src="img/computer_report.jpg" />
                    </div>
                </section>

                <Seperator />

                <section class="w-full px-2">
                    <div class="flex justify-center mb-10">
                        <h2 class="text-3xl section-heading after:bg-slate-500 font-bold">
                            Take control of your finances
                        </h2>
                    </div>

                    <div class="w-full grid grid-cols-1 md:grid-cols-3 justify-items-center gap-2">
                        <InfoCard src="img/target.svg" />

                        <InfoCard src="img/handshake.svg" />

                        <InfoCard src="img/bar-graph.svg" />
                    </div>
                </section>

                <Seperator />

                <section class="w-full px-2">
                    <div class="flex justify-center mb-10">
                        <h2 class="text-3xl section-heading after:bg-slate-500 font-bold">In partnership with</h2>
                    </div>

                    <div class="w-full flex">
                        <div class="w-1/3 flex items-center justify-around">
                            <img class="max-h-20 px-4 max-w-full" src="img/Xero_logo.png" alt="Xero Logo" />
                        </div>
                        <div class="w-1/3 flex items-center justify-around">
                            <img class="max-h-20 px-4 max-w-full" src="img/CPA_logo.png" alt="CPA Logo" />
                        </div>
                        <div class="w-1/3 flex items-center justify-around">
                            <img
                                class="max-h-20 px-4 max-w-full"
                                src="img/TPB_logo.png"
                                alt="Tax Practitioners Board Logo"
                            />
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </main>
</Layout>
