---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hencol Business Advisory">
    <main>
        <section class="banner1">
            <div class="flex items-center justify-center h-full">
                <h2 class="text-6xl text-white text-shadow">Your business is our priority</h2>
            </div>
        </section>

        <section class="bg-gray-200 text-lg py-8">
            <div class="content flex flex-wrap">
                <div class="w-2/3 px-2 text-lg">
                    <h1 class="text-4xl section-heading font-bold">Welcome to Hencol Business Advisory</h1>
                    <div class="fade-in">
                        <p class="py-3">
                            At Hencol Business Advisory, we work closely with our clients to help them reach their
                            financial goals. We are a boutique firm who focus on providing financial solutions for small
                            to medium business clients.
                        </p>
                        <p class="py-3">
                            We are technology focussed and provide business support through XERO and Reckon Accounting
                            software.
                        </p>
                        <p class="py-3">
                            We are passionate about our clients and strive to build long term relationships through
                            superior service.
                        </p>
                    </div>
                </div>
                <div class="w-1/3 px-2 my-auto">
                    <img class="w-full" src="img/computer_report.jpg" />
                </div>

                <div class="w-full mt-10 flex flex-wrap justify-center h-20">
                    <img class="h-full px-4" src="img/Xero_logo.png" alt="Xero Logo" />
                    <img class="h-full px-4" src="img/TPB_logo.png" alt="Tax Practitioners Board Logo" />
                    <img class="h-full px-4" src="img/CPA_logo.png" alt="CPA Logo" />
                </div>
            </div>
        </section>
    </main>
</Layout>
